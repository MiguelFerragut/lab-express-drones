<dic class="container mt-5">

    <div class="row justify-content-center">

        <div class="col-3">

            <h2>Available drones</h2>
            <hr>
        </div>
    </div>
</dic>

<div class="container">

    <div class="row justify-content-center">

        {{#each drones}}
        {{!-- Â¿Por que no puedo poner 4 tarjetas? --}}
        <div class="col-3 m-2">

            <div class="card" style="width: 18rem;">

                <div class="card-body">
                    <h5 class="card-title"><b>{{name}}</b></h5>
                </div>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item m-2">Propellers: {{propellers}}</li>
                    <li class="list-group-item m-2">Max Speed: {{maxSpeed}}</li>
                </ul>

                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <a href="/drones/{{_id}}/edit" class="btn btn-dark">Edit</a>
                            </div>
                            <div class="col">
                                <form action="/drones/{{_id}}/delete" method="post">
                                    <input type="submit" class="btn btn-danger" value="Delete">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>